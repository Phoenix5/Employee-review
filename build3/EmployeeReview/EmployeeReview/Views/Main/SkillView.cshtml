
@{
    ViewBag.Title = "SkillView";
}

<h2>SkillView</h2>

<b>Employee Name:</b>@Session["name"]&nbsp;
<b>Employee Id:</b>@Session["empid"]


<div id="skills" style="display:block;width:200px;height:220px;overflow:hidden;margin-bottom:20px"></div>

    @using (Html.BeginForm("SkillType", "Main", FormMethod.Post))
    {
        <input type="hidden" value="true" name="submit" />
        //  <input type="hidden" value="" name="review" id="review"/>
        <input type="submit" class="btn" />
    }



<script lang="ja" type="text/javascript">

 
     @*alert(@Session["skillType"]);*@
        var id =@Session["skillType"];
        $.ajax({
            url: '/api/Skills/' + id,
            type: 'GET',
            dataType: "json",
            success: function (data) {

                var datavalue = data;
                var myJsonObject = datavalue;


                $.each(myJsonObject, function (i, mobj) {
                    $("#skills").append('<div id="'+i+'" style="display:inline-block;width:200px;margin-bottom:30px"><h4>' + mobj.SkillsName +'</h4><input id="skill'+i+'" type="hidden" value="'+mobj.SkillsID+'"/><div id="radio'+i+'" class="radio"></div><input type="button" onclick="submit()" value="Next" class="btn"/></div>');
                    //$("#skills").prepend('');
                });
              
                GetTaskById();
             },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });
 

        function GetTaskById()
        {
           
            $.ajax({
                url: '/api/Ratings/' + id,
                type: 'GET',
                dataType: "json",
                success: function (data) {

                    var datavalue = data;
                    var myJsonObject = datavalue;

                    $.each(myJsonObject, function (i, mobj) {
                        $(".radio").append('<p><input type="radio" value="'+mobj.RatingsID+'"/>'+mobj.RatingsName+'</p>');
                    })
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        }
        var i=0;
        function submit()
        {
            @*alert($("#skill"+i).val());
            alert('@Session["name"]');
            alert($("#radio"+i+" input[type=radio]:checked").val());
            alert($.now());*@

            var task =
{
    EmployeeID:@Session["empid"],
    SkillsID:$("#skill"+i).val(),
    RatingsID:$("#radio"+i+" input[type=radio]:checked").val(),
    Comments:"hardcoded comments",
    CreateDate:'2017-03-18 01:00:49.247'
   
};

            $.ajax({
                type: "POST",
                data: JSON.stringify(task),
                url: "/api/EmployeeRatings",
                dataType: "json",
              //  async:false,
                contentType: "application/json",
               // success: function (t) {  $("#review").val(t); }
            });


            $("#"+i).remove();
            i++;
        }
</script>